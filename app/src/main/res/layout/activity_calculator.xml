<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xiaolong.exercises.a5.a5_calculator_activity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:id="@+id/a5_calculator_textview_row"
        android:layout_marginBottom="5pt">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView"
            android:layout_column="0"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:columnCount="4"
            android:rowCount="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_mminus_text"
                android:id="@+id/a5_calculator_button_mplus"
                android:layout_column="0"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_mplus_text"
                android:id="@+id/a5_calculator_button_mminus"
                android:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_mr_text"
                android:id="@+id/a5_calculator_button_mr"
                android:layout_column="2"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_mc_text"
                android:id="@+id/a5_calculator_button_mc"
                android:layout_column="3"/>
        </GridLayout>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:text="@string/a5_calculator_button_c_text"
                android:id="@+id/a5_calculator_button_c"
                android:layout_column="0"/>

        </GridLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="10pt"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_1_text"
                android:id="@+id/a5_calculator_button_1"
                android:layout_column="0"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_2_text"
                android:id="@+id/a5_calculator_button_2"
                android:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_3_text"
                android:id="@+id/a5_calculator_button_3"
                android:layout_column="2"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_4_text"
                android:id="@+id/a5_calculator_button_4"
                android:layout_column="0"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_5_text"
                android:id="@+id/a5_calculator_button_5"
                android:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_6_text"
                android:id="@+id/a5_calculator_button_6"
                android:layout_column="2"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_7_text"
                android:id="@+id/a5_calculator_button_7"
                android:layout_column="0"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_8_text"
                android:id="@+id/a5_calculator_button_8"
                android:layout_column="1"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_9_text"
                android:id="@+id/a5_calculator_button_9"
                android:layout_column="2"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_0_text"
                android:id="@+id/a5_calculator_button_0"
                android:layout_column="0"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a5_calculator_button_equals_text"
                android:id="@+id/a5_calculator_button_equals"
                android:layout_column="1"
                android:layout_columnSpan="2"/>

        </GridLayout>
    </TableRow>
</TableLayout>
